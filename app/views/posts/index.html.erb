<h3  style="text-align:center">Remote environmental monitoring</h3></div>
<table class="table table-striped">
  <thead>
    <tr>
       <th><%= model_class.human_attribute_name(:~) %></th>
       <th><%= model_class.human_attribute_name(:id) %></th> 
       <!--<th><%= model_class.human_attribute_name(:content) %></th>-->

       <th><%= model_class.human_attribute_name(:TempA) %></th>
       <th><%= model_class.human_attribute_name(:ShiA) %></th>
       <th><%= model_class.human_attribute_name(:SmokeA) %></th>
       <th><%= model_class.human_attribute_name(:ElectA) %></th>

       <th><%= model_class.human_attribute_name(:TempB) %></th>
       <th><%= model_class.human_attribute_name(:ShiB) %></th>
       <th><%= model_class.human_attribute_name(:SmokeB) %></th>
       <th><%= model_class.human_attribute_name(:ElectB) %></th>

      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <!--<th><%=t '.actions', :default => t("helpers.actions") %></th>-->
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>  </td>

        <td><%= link_to post.id, post_path(post) %></td> 
       <!-- <td><%= post.content %></td>-->
         <td><%= post.content.split(':')[1]%>℃</td>
         <td><%= post.content.split(':')[2]%>%</td>
         <td><%= post.content.split(':')[3]%>%</td>
         <td><%= post.content.split(':')[4]%></td>

         <td><%= post.content.split(':')[6]%>℃</td>
         <td><%= post.content.split(':')[7]%>%</td>
         <td><%= post.content.split(':')[8]%>%</td>
         <td><%= post.content.split(':')[9]%></td>

 
        
        <td><%=post.created_at.localtime.strftime('%Y/%m/%d %H:%M:%S') %></td>
        <!--<td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_post_path(post), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      post_path(post),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>-->
      </tr>
    <% end %>
  </tbody>
</table>

