<%- model_class = Post -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  <%= link_to t('.new'),new_post_path,:class => 'btn btn-link' %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th> 
      <th><%= model_class.human_attribute_name(:content) %></th>
        
       <th><%= model_class.human_attribute_name(:w1) %></th>
       <th><%= model_class.human_attribute_name(:s1) %></th>
       <th><%= model_class.human_attribute_name(:y1) %></th>
       <th><%= model_class.human_attribute_name(:d1) %></th>

       <th><%= model_class.human_attribute_name(:w2) %></th>
       <th><%= model_class.human_attribute_name(:s2) %></th>
       <th><%= model_class.human_attribute_name(:y2) %></th>
       <th><%= model_class.human_attribute_name(:d2) %></th>

      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.id, post_path(post) %></td> 
        <td><%= post.content %></td>

         <td><%= post.content.split(':')[1]%>℃</td>
         <td><%= post.content.split(':')[2]%>%</td>
         <td><%= post.content.split(':')[3]%>%</td>
         <td><%= post.content.split(':')[4]%></td>

         <td><%= post.content.split(':')[6]%>℃</td>
         <td><%= post.content.split(':')[7]%>%</td>
         <td><%= post.content.split(':')[8]%>%</td>
         <td><%= post.content.split(':')[9]%></td>

 
        
        <td><%=post.created_at.localtime.strftime('%Y/%m/%d %H:%M:%S') %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_post_path(post), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      post_path(post),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

  <div class="col-xs-4"></div>
  <div class="col-xs-8">
  <%= link_to 'On D1',status_ond1_path, :class=>'btn btn-success btn-lg' %>
  <%= link_to 'Off D1',status_offd1_path,class:'btn btn-warning btn-sm' %>
  <%= link_to 'On D2',status_ond2_path,class:'btn btn-success btn-xs' %>
  <%= link_to 'Off D2',status_offd2_path,class:'btn btn-warning btn-xs' %>
  <%= link_to 'On  All',status_onall_path,class:'btn btn-success btn-sm' %>
  <%= link_to 'Off  All',status_offall_path,data:{confirm:'Are you sure turn off all?'},class:'btn btn-danger btn-lg' %></div>
